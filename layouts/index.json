{
    "posts":
    [
        {{- range $idx, $post := .Pages }}
        {{ if $idx }},{{ end }}{
            "title": "{{ $post.Title }}",
            "date": "{{ $post.Date.Format "2006-01-02T15:04:05Z07:00" }}",
            "rellink": "{{ $post.RelPermalink }}"
        }
        {{- end }}
    ]
}
